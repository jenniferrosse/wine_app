   <div class="container">  
  <%= link_to 'New Producer', new_winery_path %>

   
  
<div class="row">
  <% @wineries.each do |winery| %>
    <div class="col-md-2 col-sm-3 col-xs-6">
      <div class="icon">
        <div class="thumbnail">
          <%= link_to (image_tag winery.thumbnail.url(:small)), winery %>
        </div>
        <div class="caption">
          <h5><%= link_to winery.name, winery %><h5>
        </div> 
      
      </div>
    </div>  
  <% end %>
</div>

<div class="text-center">
  <ul class="pagination">
    <%= will_paginate @wineries, renderer: BootstrapPagination::Rails %>
  </ul>
</div>

  <br>
  <% if user_signed_in? %>
    <h2>Import Wineries</h2>
  
    <%= form_tag import_wineries_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "Import CSV" %>
    <% end %>
  
    <%= link_to 'New Winery', new_winery_path %>
  <% end %>
