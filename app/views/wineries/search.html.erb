<div class="container">  

  <p id="notice"><%= notice %></p>

  <h1>Wineries</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Country</th>
        <th>Region</th>
        <th>Sub region</th>
       
        <th>Website</th>
        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @wineries.each do |winery| %>
        <tr>
          
          <td><%= link_to winery.name, winery %></td>
          <td><%= winery.country %></td>
          <td><%= winery.region %></td>
          <td><%= winery.sub_region %></td>
     
          <td><%= link_to winery.website, "http://#{winery.website}", :target => "_blank" %></td>
          <td><%= link_to 'Show', winery %></td>
          <td><%= link_to 'Edit', edit_winery_path(winery) %></td>
          <td><%= link_to 'Destroy', winery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Winery', new_winery_path %>

</div>