<% content_for(:title, 'Producers')%>
<div class="container-fluid">  

  <div class="jumbotron">

    <h1>Producers</h1>
    <div class="row">
      <div class="col-md-4">

       <%= form_tag search_producers_path, method: :get, role: "search" do %>
            <p>
             <%= text_field_tag :search, params[:search], class: "form-control" %>
             <%= submit_tag "Search", name: nil, class: "btn btn-default" %>
             </p> 
        <% end %>
      </div>
    </div>
  </div>
</div>


   <div class="container">  
  <%= link_to 'New Producer', new_producer_path %>

  <div class="row">
  <% @producers.each do |producer| %>
    <div class="col-md-3 col-sm-4 col-xs-6">
      <div class="icon">
        <div class="thumbnail">
          <%= link_to image_tag(producer.thumbnail.url(:small), class: "img-responsive aspect"), producer %>
          <div class="caption">
            <h5 class="text-center"><%= link_to producer.name, producer %></h5>
            </div>
        </div> 
      </div>
    </div>
  <% end %>
  </div>

<div class="text-center">
  <ul class="pagination">
    <%= will_paginate @producers, renderer: BootstrapPagination::Rails %>
  </ul>
</div>

  <br>

  <%= link_to 'New producer', new_producer_path %>

</div>