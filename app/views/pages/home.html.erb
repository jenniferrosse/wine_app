<div class="container">
  <div class="row">
    <h2><small>Producers in California</small></h2>
    <br>    
    <% @producers_california.each do |producer| %>
      <div class="col-md-2 col-sm-2 col-xs-4">
        <div class="icon">
          <%= link_to image_tag(producer.thumbnail.url(:small), class: "img-responsive aspect"), producer %>
          <div class="caption">
            <h4 class="text-center"><small><%= link_to producer.name, producer %></small></h4>
            <h5 class="text-center"><small><%= producer.sub_region %></small></h5>
