    <h2 class="text-center">Find wine producers that use natural methods.</h2>
      <p>
        <%= link_to 'Search Producers', producers_path, class: "btn btn-primary-outline btn-lg"  %>
        <%= link_to 'View Map', producers_map_page_path, class: "btn btn-primary-outline btn-lg"  %>
    </p>
    <br>
